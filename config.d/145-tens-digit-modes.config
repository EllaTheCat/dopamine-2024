    bindsym $kp5 mode "$cws5"
    bindsym $kp6 mode "$cws6"
    bindsym $kp7 mode "$cws7"
    bindsym $kp8 mode "$cws8"
    bindsym $kp9 mode "$cws9"

    bindsym $kpz mode "$cws0"
    bindsym $kpd mode "$cwsA"
}

